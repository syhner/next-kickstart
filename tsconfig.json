{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Type Checking */
    "noUncheckedIndexedAccess": true, // Increases type-safety
    "strict": true,

    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"] // Alias for absolute imports
    },
    "resolveJsonModule": true,

    /* Emit */
    "noEmit": true,

    /* JavaScript Support */
    "allowJs": true,

    /* Editor Support */
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /* Backwards Compatibility */

    /* Language and Environment */
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES2017", // Drizzle Studio requires >=ES2015, src/trpc/trpc-caller requires >=ES2017

    /* Compiler Diagnostics */

    /* Projects */
    "incremental": true,

    /* Output Formatting */

    /* Completeness */
    "skipLibCheck": true

    /* Command Line */

    /* Watch Options */
  },
  "include": [
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
